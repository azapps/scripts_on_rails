<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('misc.appname'), root_path, class: "brand" %>
      <% if user_signed_in? %>
        <div class="nav-collapse collapse pull-left">
          <ul class="nav">
            <li class="">
            <%= link_to t('header.home'), root_path %>
            </li>
            <li class="">
            <%= link_to t('projects.my'), projects_path %>
            </li>
            <li class="">
            <%= link_to t('header.help'), help_path %>
            </li>
          </ul>
        </div>
      <% end %>

      <ul class="nav pull-right">
        <% if !(user_signed_in?) %>
          <li><%= link_to t('users.sign_in'), new_user_session_path %></li>
        <%else %>
          <% if current_user.is_admin? %>
            <li class="dropdown">
            <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
              <i class="icon-wrench icon-white"></i>
              <%= t "admin.manage"  %>
              <b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to projects_list_path do %>
                <i class="icon-briefcase"></i>
                <%= t('projects.all') %>
              <% end %>
              </li>
              <li><%= link_to languages_path do %>
                <i class="icon-flag"></i>
                <%= t('languages.all') %>
              <% end %>
              </li>
              <li>
              <%= link_to users_path do %>
                <i class="icon-user"></i>
                <%= t('admin.users')%>
              <%end%> 
              </li>
            </ul>
            </li>

          <% end %>
          <li class="dropdown">
          <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
            <i class="icon-user icon-white"></i>
            <%= getName current_user  %>
            <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to edit_user_registration_path do %>
              <i class="icon-pencil"></i>
              <%= t('users.profile') %>
            <% end %>
            </li>
            <li>
            <%= link_to destroy_user_session_path, :method => :delete do %>
              <i class="icon-off"></i>
              <%= t('users.sign_out')%>
            <%end%> 
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

